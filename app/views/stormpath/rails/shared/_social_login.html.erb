    <%= link_to 'Log in with Github', "https://github.com/login/oauth/authorize?scope=#{Stormpath::Rails.config.web.social.github.scope}&client_id=#{Stormpath::Rails.config.web.github_app_id}&redirect_uri=#{github_callback_url}" %>
  <% end %>
</div>

