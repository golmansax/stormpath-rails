<div>
  <% if Stormpath::Rails.config.web.facebook_app_id %>
    <%= link_to 'Log in with Facebook', "https://www.facebook.com/dialog/oauth?client_id=#{Stormpath::Rails.config.web.facebook_app_id}&redirect_uri=#{facebook_callback_url}&scope=#{Stormpath::Rails.config.web.social.facebook.scope}" %>
  <% end %>
</div>

